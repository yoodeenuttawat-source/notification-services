# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=notification_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Kafka Configuration
KAFKA_BROKERS=localhost:29092
KAFKA_CLIENT_ID=notification-service
KAFKA_GROUP_ID=notification-service-group
KAFKA_RETRIES=8
KAFKA_INITIAL_RETRY_TIME=100

# API Configuration
API_PORT=3000
API_URL=http://localhost:3000

# Cache Configuration
CACHE_MAX_SIZE=10000

# Email Provider Configuration
EMAIL_FROM=noreply@example.com
EMAIL_PROVIDER1_API_URL=https://api.email-provider1.com/v1/send
EMAIL_PROVIDER2_API_URL=https://api.email-provider2.com/v1/send

# Push Provider Configuration
PUSH_PROVIDER1_API_URL=https://api.push-provider1.com/v1/push
PUSH_PROVIDER2_API_URL=https://api.push-provider2.com/v1/notifications

# Provider API Configuration (shared)
PROVIDER_API_KEY=your-api-key-here
PROVIDER_API_URL=https://api.provider.com

# Dead Letter Queue Configuration
DLQ_AUTO_REPLAY=false
DLQ_REPLAY_DELAY=5000
