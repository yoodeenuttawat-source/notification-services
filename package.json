{
  "name": "notification-services",
  "version": "1.0.0",
  "description": "Notification Services with NestJS and PostgreSQL",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:api": "nest start --watch --entryFile notification-api/main",
    "start:splitter-worker": "nest start --watch --entryFile workers/splitter-worker/main",
    "start:push-worker": "nest start --watch --entryFile workers/push-worker/main",
    "start:email-worker": "nest start --watch --entryFile workers/email-worker/main",
    "start:dlq-replay-worker": "nest start --watch --entryFile workers/dlq-replay-worker/main",
    "start:all": "concurrently -n \"API,SPLITTER-WORKER,PUSH-WORKER,EMAIL-WORKER\" -c \"blue,green,yellow,magenta\" \"npm run start:api\" \"npm run start:splitter-worker\" \"npm run start:push-worker\" \"npm run start:email-worker\"",
    "migrate": "ts-node scripts/migrate.ts",
    "migrate:up": "ts-node scripts/migrate.ts up",
    "migrate:down": "ts-node scripts/migrate.ts down",
    "call-api": "ts-node scripts/call-api.ts",
    "test:load": "ts-node scripts/load-test.ts",
    "replay-dlq": "ts-node scripts/replay-dlq.ts",
    "format": "prettier --write \"src/**/*.ts\" \"e2e/**/*.ts\" \"scripts/**/*.ts\" \"*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"e2e/**/*.ts\" \"scripts/**/*.ts\" \"*.{ts,js,json}\"",
    "test": "jest --config jest.config.js",
    "test:unit": "jest --config jest.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:watch": "jest --watch",
    "test:cov": "jest --config jest.config.js --coverage",
    "test:all": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^3.0.0",
    "@wfp99/async-lru-cache": "^1.1.1",
    "axios": "^1.13.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "concurrently": "^8.2.2",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
